@page
@model BrPo.Website.Areas.Admin.Pages.Paper.IndexModel

@{
    ViewData["Title"] = "Paper Admin";
}

<div class="row bpi-header-spacing">
    <div class="col-lg-6">
        <h2>Paper Admin</h2>
    </div>
    <div class="col-lg-6 text-right">
        <a class="btn btn-primary text-white" asp-area="Admin" asp-page="/Paper/Create">Create Paper</a>
    </div>
</div>
            <form method="post">

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].GSMWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].RollPaper)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].ColourProfilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].RollWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].CutSheetHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperModels[0].CutSheetWidth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PaperModels) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GSMWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RollPaper)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColourProfilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RollWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CutSheetHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CutSheetWidth)
            </td>
            <td>
                <a asp-area="Admin" asp-page="/Paper/Edit" asp-route-id="@item.Id" class="btn btn-primary text-white">Edit</a>
                <a asp-area="Admin" asp-page="/Paper/Details" asp-route-id="@item.Id" class="btn btn-primary text-white">Details</a>
                <a asp-area="Admin" asp-page="/Paper/Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</form>