@using BrPo.Website.Areas.Pictures.Models
@model CarouselModel

        <div class="col-12 image-carousel" id="">
            <div id="@Model.CarouselId" class="carousel slide" data-ride="carousel">
            @if (Model.ShowContent)
            {
                <div class="carousel-inner">
                    <partial name="CarouselContentPartial" model="Model" />
                </div>
            }
            @if (Model.ShowIndicators)
            {
                <ol class="carousel-indicators">
                    <partial name="CarouselIndicatorsPartial" model="Model" />
                </ol>
            }
            @if (Model.ShowNav)
            {
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            }
            </div>
        </div>