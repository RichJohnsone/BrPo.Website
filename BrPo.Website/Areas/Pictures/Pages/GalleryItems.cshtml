    function addIntegerControls(){
        $(".integer-control-js").on('mouseup blur change input', function(){
            $(this).val(roundToInteger($(this).val()));
        });
        $(".integer-control-js").each(function(){
            $(this).val(roundToInteger($(this).val()));
        })
    }

    function roundToInteger(input){
        return Math.round(input); 
    }
</script>

