<div class="container p-0">
    <div class="row mb-3 d-flex justify-content-between pr-3 pl-3" role="group">
        <label>Fit to </label>
        <button type="button" class="btn btn-primary btn-sm" id="sizeA4" data-toggle="tooltip" title="Fit to A4">A4</button>
        <button type="button" class="btn btn-primary btn-sm" id="sizeA3" data-toggle="tooltip" title="Fit to A3">A3</button>
        <button type="button" class="btn btn-primary btn-sm" id="sizeA2" data-toggle="tooltip" title="Fit to A2">A2</button>
        <button type="button" class="btn btn-primary btn-sm" id="maxSize" data-toggle="tooltip" title="Set maximum size for selected paper">Max</button>
    </div>
    <div class="form-group row mb-1 ml-1">
        <label for="height" class="w-33 col-form-label">Height</label>
        <div class="w-33">
            <input type="number" 
                class="form-control" 
                id="height" 
                placeholder="Height" 
                data-toggle="tooltip"
                data-val="true"
                data-val-number="The Height field must be a number." 
                min="100" 
                max="2000" 
                name="height" />
        </div>
        <div class="w-33">
            <div class="text mt-2 ml-2">mm</div>
        </div>
    </div>
    <div class="field-validation-valid row ml-1" data-valmsg-for="height" data-valmsg-replace="true"></div>    
    <div class="form-group row mb-0 ml-1">
        <label for="height" class="w-33 col-form-label">Width</label>
        <div class="w-33">
            <input type="number" 
                class="form-control" 
                id="width" 
                placeholder="Width" 
                data-toggle="tooltip"
                data-val="true"
                data-val-number="The Width field must be a number." 
                min="100" 
                max="440" 
                name="width" />
        </div>
        <div class="w-33">
            <div class="text mt-2 ml-2">mm</div>
        </div>
    </div>
    <div class="field-validation-valid row ml-1" data-valmsg-for="width" data-valmsg-replace="true"></div>    
</div>




